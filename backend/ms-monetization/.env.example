# Configurações gerais
PROJECT_NAME=MS-Monetization
VERSION=1.0.0
API_V1_STR=/api/v1

# Banco de dados
POSTGRES_SERVER=postgres
POSTGRES_USER=monetization_user
POSTGRES_PASSWORD=monetization_password
POSTGRES_DB=monetization_db

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Frontend
FRONTEND_URL=http://localhost:3000

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID_MONTHLY=price_...
STRIPE_PRICE_ID_YEARLY=price_...

# Hotmart (futuro)
HOTMART_CLIENT_ID=
HOTMART_CLIENT_SECRET=
HOTMART_WEBHOOK_SECRET=

# Configurações de CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Configurações de Pagamento
HOTMART_SECRET_KEY=your-hotmart-secret-key

# Application Settings
APP_NAME=ms-monetization
APP_ENV=development
DEBUG=True
API_PREFIX=/api/monetization

# Database
DATABASE_URL=postgresql://monetization_user:monetization_password@monetization-db:5432/monetization_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Security
JWT_SECRET_KEY=supersecretkey
ACCESS_TOKEN_EXPIRE_MINUTES=15
SECRET_KEY=another_super_secret_key

# CORS
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000","http://localhost:8000"]

# Redis
REDIS_URL=redis://redis:6379/4

# Stripe Settings
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Hotmart Settings
HOTMART_CLIENT_ID=your_hotmart_client_id
HOTMART_CLIENT_SECRET=your_hotmart_client_secret
HOTMART_APP_TOKEN=your_hotmart_app_token
HOTMART_WEBHOOK_SECRET=your_hotmart_webhook_secret
HOTMART_VALIDATE_WEBHOOK=true

# Internal Service Communication
CHATIA_SERVICE_URL=http://ms-chatia:5000
AUTH_SERVICE_URL=http://ms-auth:5000
STUDY_SERVICE_URL=http://ms-study:5000

# Service Limits
DEFAULT_CHAT_MESSAGES_LIMIT=5
MAX_DAILY_AD_REWARDS=3

# Inter-service communication
SERVICE_API_KEY=internal_service_key 