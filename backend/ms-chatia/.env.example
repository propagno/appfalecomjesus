# Configurações da aplicação
DEBUG=true
ENVIRONMENT=development
APP_NAME=MS-ChatIA
APP_VERSION=0.1.0

# Segurança
SECRET_KEY=dev_secret_key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15

# Banco de dados
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/falecomjesus

# CORS
CORS_ORIGINS_STR=http://localhost,https://falecomjesus.com

# Redis
REDIS_URL=redis://redis:6379/0

# Limites de chat
CHAT_LIMIT_FREE_USERS=5
CHAT_LIMIT_KEY_TTL=86400

# OpenAI
OPENAI_API_KEY=sua_api_key_aqui
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=800

# Comunicação entre microsserviços
MS_AUTH_URL=http://ms-auth:8002
MS_MONETIZATION_URL=http://ms-monetization:8005
SERVICE_API_KEY=internal_service_key 